{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true,
  "strict": true,
  "module": "ESNext",
  "target": "ESNext",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@modules/*": ["src/modules/*"],
      "@pages/*": ["src/pages/*"]
    }
  }
}
